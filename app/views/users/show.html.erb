<p id="notice">Welcome! You have signed up successfully.</p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= link_to user_path(current_user.id) do %>
        <%= attachment_image_tag current_user, :profile_image_id, fallback: 'no_image.jpg' %>
      <% end %>

      <table class="table">
        <%= form_with model:@user, local:true do |f| %>
          <tbody>
            <tr></tr>
            <tr>
	            <th>name</th>
	            <%= @user.name %>
            </tr>
            <tr>
	            <th>introduction</th>
	            <%= @user.introduction %>
            </tr>
          </tbody>
        </table>
        </br>
       <% end %>
      <div class="row">
        <%= link_to '', edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_id" %>
      </div>

      <h2 class="mt-3">New book</h2>
          <%= form_with model: @book, local: true do |f| %>


        　　<div class="form-group">
              <label>Title</label>
              </br>
              <%= f.text_field :title %>
            </div>

            <div class="form-group">
              <label>Opinion</label>
              </br>
              <%= f.text_area :body %>
              </br>
            </div>

            <div class="form-group">
              <%= f.submit 'Create Book', class: "btn btn-success" %>
            </div>

          <% end %>
    </div>


    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th scope = "col"></th>
            <th scope = "col">Title</th>
            <th scope = "col">Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(@user.id)do %>
                <%= attachment_image_tag book.user, :profile_image, size:"40x40", fallback: 'no_image.jpg' %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
