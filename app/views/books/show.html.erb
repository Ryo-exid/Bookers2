<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
  	<tbody>
  	  <% @books.each do |book| %>
  	  <tr>
  	    <td>
  	      <%= link_to user_path(current_user.id)do %>
            <%= attachment_image_tag current_user, :profile_image, size:"40x40", fallback: 'no_image.jpg' %>
          <% end %></br>
          <%= link_to @user.name, user_path(current_user.id)do %>
        </td>
        <td><%= link_to book.title %></td>
        <td><%= book.body %></td>
        <td><a class="btn btn-sm btn-success edit_book_27067" href="/books/27067/edit">Edit</a></td>
        <td><a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger destroy_book_27067" rel="nofollow" data-method="delete" href="/books/27067">Destroy</a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>